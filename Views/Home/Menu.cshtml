@model IEnumerable<SinglePageCMS.Models.Menu>
@{
    var url = Request.Url.AbsolutePath.ToString();
}
<nav class="main-nav">
    <ul>
        @foreach (var item in Model)
        {
            if (url.Contains(item.Url))
            {
                <li class="active"><a href="@item.Url">@item.Name</a></li>
            }
            else
            {
                <li><a href="@item.Url">@item.Name</a></li>
            }
        }
    </ul>
</nav>